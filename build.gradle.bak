task clientJar(type: Jar) {
    appendix = 'client'
    from sourceSets.main.output
    exclude('**/*Controller*', '**/*Repository*', '**/static/**', '**/resources/**', '**/templates/**', '**/*.sql*', '**/application.properties')
}

task clientBoot(type: BootRepackage, dependsOn: clientJar) {
    withJarTask = clientJar
    customConfiguration = "mycustomconfiguration"
    mainClass = 'crossover.backup.ClientAgent'
    ext.mainClassName = 'crossover.backup.ClientAgent'
}

configurations {
    mycustomconfiguration.exclude module : 'spring-boot-starter-web'

}


dependencies {
    mycustomconfiguration configurations.compile, "org.springframework.boot:spring-boot-starter"
    client  "org.springframework.boot:spring-boot-starter", "org.springframework:spring-web", "com.fasterxml.jackson.core:jackson-databind"
    bootloader "org.springframework.boot:spring-boot-loader"
}

task myjar(type: Jar) {
    baseName = 'crossoveragent'
    appendix = 'client'
    from sourceSets.main.output
    exclude('**/*Controller*', '**/*Repository*', '**/static/**', '**/resources/**', '**/templates/**', '**/*.sql*')
    into('lib') {
      from configurations.client 
    }
    into('/') {
      zipTree(configurations.bootloader.files[0])
    }
    manifest {
    attributes(
      'Start-Class': 'crossover.backup.ClientAgent',
      'Main-Class' : 'org.springframework.boot.loader.JarLauncher'
    )
  }

}

