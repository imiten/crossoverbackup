<div class="container">
  <header><h3>Backups</h3></header>
  <div class="row">
    <div class="span1">
      Backup Id:
      <br />
      <input ng-model="currentBackup"  type="text" readonly placeholder="Backup Id">
    </div>
  </div>
   <div class="row">
    <div class="span1">
      Backup Name:
      <br />
      <input ng-model="editBackup.name" type="text" placeholder="Backup Name" required>
      <input ng-model="editBackup.runStartTimestamp" ng-trim="false" type="text" placeholder="yyyy/MM/dd HH:mm"  required>
      
    </div>
  </div>

  <div class="row">
    <div class="span4">
      Source:
      <br />
      <input ng-model="editBackup.sourceIP" type="text" placeholder="Source IP" required>
      <input ng-model="editBackup.sourcePath" type="text" placeholder="Source Path" required>
      <input ng-model="editBackup.sourceUser" type="text" placeholder="Source User" required>
      <input ng-model="editBackup.sourcePassword" type="text" placeholder="Source Password" required>
      
    </div>
  </div>
  
  <div class="row">
    <div class="span4">
      Destination:
      <br />
      <input ng-model="editBackup.destinationIP" type="text" placeholder="Destination IP" required>
      <input ng-model="editBackup.destinationPath" type="text" placeholder="Destination Path" required>
      <input ng-model="editBackup.destinationUser" type="text" placeholder="Destination User" required>
      <input ng-model="editBackup.destinationPassword" type="text" placeholder="Destination Password" required>
      
    </div>
  </div>
  
  
   <div class="row">
    <div class="span2">
      <button id="submitBackup" class="btn btn-primary" type="button" 
                    ng-disabled="!editBackup.name || !editBackup.sourceIP || !editBackup.sourcePath || !editBackup.sourceUser || !editBackup.sourcePassword || !editBackup.destinationIP || !editBackup.destinationPath || !editBackup.destinationUser || !editBackup.destinationPassword" 
                    ng-click="updateBackup()">Update Backup</button>

      <button type="button" ng-click="doBack()">Back</button>
    </div>
  </div>
</div>
